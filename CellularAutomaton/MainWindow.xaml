<Window x:Class="CellularAutomaton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"


        xmlns:local="clr-namespace:CellularAutomaton"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="960" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Grid>
            <Menu IsMainMenu="true">
                <MenuItem Header="One dimension Automat"/>
                <MenuItem Header="Game Of Life"/>
            </Menu>
        </Grid>
        <Grid Margin="0,0,0,0">
            <Button x:Name="btn1" Content="Draw board" HorizontalAlignment="Left" Margin="45,37,0,0" VerticalAlignment="Top" Width="75" Click="Iterate_CLick"/>
            <xctk:IntegerUpDown x:Name="ruleNumber" Value="90" Width="75" Height="20" Minimum="0" Maximum="255" Margin="147,37,720,465"/>
            <Image x:Name="img" HorizontalAlignment="Left" Width="800" Height="400" Margin="45,82,0,0" VerticalAlignment="Top" MouseDown="Img_MouseDown"/>
        </Grid>
    </Grid>
</Window>
